<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.superAdmin.superAdminFragment">

    <Button
        android:id="@+id/btnForgotPasswordAdminValidation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Validaton Password"
        android:layout_margin="20dp"
        android:background="@drawable/custbut2"
        android:textColor="#fff"
        android:fontFamily="sans-serif-black" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custombut1"
        android:textColor="@color/colorPrimary"
        android:fontFamily="sans-serif-black"
        android:layout_below="@id/btnForgotPasswordAdminValidation"/>

    <ListView
        android:id="@+id/lvsuperAdmin"
        android:layout_below="@id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:choiceMode="multipleChoice"/>

</RelativeLayout>